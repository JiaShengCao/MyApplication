<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#1ec7ae"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_height="match_parent">
 <LinearLayout
    android:orientation="horizontal"
    android:layout_weight="10"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:layout_gravity="center"
            android:background="@mipmap/back"
            android:id="@+id/fanhui"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="电灯"/>
            <TextView
                android:id="@+id/tv_state1"
                android:textColor="#e9e7e7"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="关闭"/>

        </LinearLayout>
            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_init"
                android:background="@mipmap/white_line"
                android:layout_marginRight="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="30dp"
            android:src="@mipmap/huo"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"/>
        <TextView
            android:id="@+id/tv_state2"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:text="已关闭"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </FrameLayout>

</LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="已连续开启：0 h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="今日消耗电量：0 kwh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="#ffffff"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_switch"
            android:layout_marginTop="8dp"
            android:background="@mipmap/switch_off"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
            <TextView
                android:gravity="center|top"
                android:textSize="15sp"
                android:text="开关"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_timing"
            android:layout_marginTop="8dp"
            android:background="@mipmap/dingshi2_on"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
            <TextView
                android:gravity="center|top"
                android:textSize="15sp"
                android:text="定时"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:background="@mipmap/youxianji"
            android:layout_marginTop="8dp"
            android:id="@+id/btn_priority"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
            <TextView
                android:gravity="center|top"
                android:textSize="15sp"
                android:text="优先级"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
