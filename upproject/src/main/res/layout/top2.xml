<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#e6e6e6"

    android:orientation="vertical">
    <ImageView
        android:id="@+id/tabline"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:background="#116eba"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="47dp">
         <ImageView
                android:id="@+id/iv_bottom1"
                android:src="@mipmap/myhome_selector"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/textview1"
            android:textColor="#116eba"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="连接设备"
            android:layout_gravity="center"
            android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="47dp">
            <ImageView
                android:id="@+id/iv_bottom2"
                android:src="@mipmap/smart_unselector"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/textview2"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="智能控制"
            android:layout_gravity="center"
            android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="47dp">
            <ImageView
                android:id="@+id/iv_bottom3"
                android:src="@mipmap/my_unselector"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/textview3"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="我的管家"
            android:layout_gravity="center"
            android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
